<%= render 'welcome/navbar' %> <!-- Navigation Bar -->

<body>

  <div id="container"> <!-- Project information -->
    <h2><%= @project.name %></h2>
    <p><%= @project.description %></p>
    <img src= <%= @project.image %> alt="imgur.com">
    <br>
    <a href=<%= @project.video %>> Instructionional Video</a></a>
  </div>

  <br><br> <!-- Need whitespace -->

  <div id="show-links">
    <!-- Start of staff only items -->
      <%= link_to 'Edit Project', edit_project_path(@project) %>
      <%= link_to 'Remove Project', @project, method: :delete, data: { confirm: 'Are you sure you want to delete this project?' } %><br>
    <!-- End of staff only items -->
    <br><br> <!-- Need whitespace -->
    <%= link_to 'Back To Projects', projects_path %>
  </div>

<div id="container">
  <h3>User Feedback</h3>
  <!-- Below loop will show the the feedback on the project -->
  <% @project.feedbacks.each do |feedback| %>
    <p>Name: <%= feedback.commenter %></p>
    <p>Subject: <%= feedback.title %></p>
    <p>Body: <%= feedback.body %></p>
    <p>Visible: <%= feedback.is_approved %></p> <!-- Only Staff will see -->
    <br> <!-- Need whitespace -->
  <% end %>

  <h3>Give us some feedback:</h3> <!-- Form for feeback input -->
  <%= form_for([@project, @project.feedbacks.build]) do |f| %>
    <p><%= f.label 'Name' %>: <%= f.text_field :commenter %></p>
    <p><%= f.label 'Subject' %>: <%= f.text_field :title %></p>
    <p><%= f.label 'Body' %>: <%= f.text_area :body %></p>
    <p><%= f.label 'Visible' %>: <%= f.check_box :is_approved %></p> <!-- Only Staff will see -->
    <p><%= f.submit %></p>
  <% end %>
</div>

</body>
